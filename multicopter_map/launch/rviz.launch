<!--
  Start rplidar and gmapping. Visualize it in rviz.
 -->
<launch>
  <include file="$(find multicopter_map)/launch/rplidar.launch" />
  <include file="$(find multicopter_map)/launch/hector_slam.launch"/>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find multicopter_map)/rviz/multicopter.rviz" />
</launch>
