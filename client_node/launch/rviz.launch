<!--
  Start rplidar and gmapping. Visualize it in rviz.
 -->
<launch>
  <include file="$(find client_node)/launch/rplidar.launch" />
  <include file="$(find client_node)/launch/hector_slam.launch"/>
  <include file="$(find client_node)/launch/costmap.launch"/>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find client_node)/rviz/client.rviz" />
</launch>
